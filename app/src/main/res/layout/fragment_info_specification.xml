<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/specification_form" >

        <TextView
            android:id="@+id/color_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/specification_color"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/text_body" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/country_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/specification_country"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/text_body" />

    <TextView
        android:id="@+id/brand_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/specification_brand"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/text_body" />

    <TextView
        android:id="@+id/code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/specification_code"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/text_body" />

    <TextView
        android:id="@+id/sizes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/specification_sizes"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/text_body" />


</LinearLayout>